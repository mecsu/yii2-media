{
  "name": "mecsu/yii2-media",
  "description": "Media library",
  "keywords": ["yii2", "yii2-media", "media", "library", "manager"],
  "type": "yii2-extension",
  "license": "MIT",
  "version": "1.0.6",
  "authors": [
    {
      "name": "Xuan Nguyen",
      "email": "xuanhn.vt@gmail.com"
    }
  ],
  "repositories":[
    {
        "type": "git",
        "url": "https://github.com/mecsu/yii2-media"
    }
  ],
  "require": {
    "yiisoft/yii2": "^2.0.40",
    "yiisoft/yii2-imagine": "^2.2",
    "wdmg/yii2-base": "^1.3.0",
    "wdmg/yii2-validators": "^1.0.6",
    "bower-asset/font-awesome": "^5.13"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "mecsu\\media\\": ""
    }
  },
  "extra": {
    "options": {
      "routePrefix": "admin",
      "mediaRoute": "/media",
      "mediaCategoriesRoute": "/media/categories",
      "mediaPath": "/uploads/media",
      "mediaThumbsPath": "/uploads/media/_thumbs",
      "maxFilesToUpload": 10,
      "maxUploadSize": 5242880,
      "allowedMime": {
        "image/png": true,
        "image/jpeg": true,
        "image/gif": true,
        "image/svg+xml": true,
        "application/pdf": true,
        "application/msword": true,
        "application/vnd.ms-excel": true,
        "application/rtf": true,
        "text/csv": true,
        "text/plain": true
      }
    }
  }
}